<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anime Favorit - MyStream Cyber</title>
</head>
<body class="text-gray-200 min-h-screen flex flex-col font-sans selection:bg-neon-pink selection:text-white">

    <%- include('partials/header') %>

    <div class="container mx-auto px-4 py-8 flex-grow relative z-10">
        <h1 class="text-3xl font-bold mb-8 flex items-center gap-3 text-white border-b border-white/10 pb-4">
            <span class="text-neon-pink drop-shadow-[0_0_10px_rgba(236,72,153,0.8)]">‚ù§Ô∏è</span> 
            Koleksi Favorit
        </h1>

        <div id="bookmark-container" class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4"> </div>

        <div id="empty-msg" class="hidden glass rounded-xl text-center py-20 border border-white/5">
            <div class="text-6xl mb-4 grayscale opacity-50">üíî</div>
            <p class="text-xl text-gray-300 font-semibold">Belum ada anime favorit.</p>
            <a href="/list" class="text-neon-cyan mt-2 inline-block hover:underline decoration-dashed decoration-neon-cyan">Cari anime dulu yuk!</a>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            loadBookmarks(); [cite_start]// [cite: 15-16]
        });

        function loadBookmarks() {
            const container = document.getElementById('bookmark-container');
            const emptyMsg = document.getElementById('empty-msg');
            
            const bookmarks = JSON.parse(localStorage.getItem('myStream_bookmarks')) || []; [cite_start]// [cite: 17-18]

            if (bookmarks.length === 0) {
                emptyMsg.classList.remove('hidden');
                container.innerHTML = ''; [cite_start]// [cite: 19]
            } else {
                emptyMsg.classList.add('hidden');
                let html = '';
                
                // RENDER HTML DENGAN GAYA CYBERPUNK
                [cite_start]bookmarks.reverse().forEach(item => { // [cite: 21]
                    html += `
                        <div class="group relative block glass rounded-xl overflow-hidden border border-white/5 hover:border-neon-pink transition duration-300 hover:shadow-neon-pink">
                            <a href="${item.link}">
                                <div class="relative pb-[140%]">
                                    <img src="${item.poster}" class="absolute top-0 left-0 w-full h-full object-cover group-hover:scale-110 transition duration-500" onerror="this.src='https://via.placeholder.com/150?text=No+Image'"> <div class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black via-black/80 to-transparent p-3 pt-8">
                                        <h3 class="text-sm font-bold truncate text-white group-hover:text-neon-pink transition">${item.title}</h3> </div>
                                </div>
                            </a>
                            
                            <button onclick="removeOne(event, '${item.id}')" 
                                class="absolute top-2 right-2 bg-black/50 backdrop-blur hover:bg-neon-pink text-white w-8 h-8 rounded-full flex items-center justify-center shadow-lg transition transform hover:scale-110 z-10 border border-white/20 hover:border-neon-pink" title="Hapus">
                                ‚úï </button>
                        </div>
                    `;
                });
                container.innerHTML = html; [cite_start]// [cite: 26]
            }
        }

        function removeOne(e, id) {
            e.preventDefault();
            if(!confirm('Hapus anime ini dari favorit?')) return;
            let bookmarks = JSON.parse(localStorage.getItem('myStream_bookmarks')) || [];
            bookmarks = bookmarks.filter(item => item.id !== id);
            localStorage.setItem('myStream_bookmarks', JSON.stringify(bookmarks));
            loadBookmarks(); [cite_start]// [cite: 29]
        }
    </script>
</body>
</html>
