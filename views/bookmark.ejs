<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anime Favorit - MyStream Cyber</title>
</head>
<body class="text-gray-200 min-h-screen flex flex-col font-sans selection:bg-neon-pink selection:text-white">

    <%- include('partials/header') %>

    <div class="container mx-auto px-4 py-8 flex-grow relative z-10">
        <div class="flex justify-between items-center mb-6 border-b border-white/10 pb-4">
            <h1 class="text-3xl font-bold flex items-center gap-3 text-white">
                <span class="text-neon-pink drop-shadow-[0_0_10px_rgba(236,72,153,0.8)]">‚ù§Ô∏è</span> 
                Koleksi Favorit
            </h1>
            <button onclick="clearBookmarks()" class="bg-cyber-card hover:bg-red-600 text-red-400 hover:text-white border border-red-500/50 px-4 py-2 rounded-lg text-sm font-bold transition shadow-lg hover:shadow-red-500/50">
                Hapus Semua
            </button>
        </div>

        <div id="bookmark-container" class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4"> </div>

        <div id="empty-msg" class="hidden glass rounded-xl text-center py-20 border border-white/5">
            <div class="text-6xl mb-4 grayscale opacity-50">üíî</div>
            <p class="text-xl text-gray-300 font-semibold">Belum ada anime favorit.</p>
            <a href="/library" class="text-neon-cyan mt-2 inline-block hover:underline decoration-dashed decoration-neon-cyan">Cari anime dulu yuk!</a>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="/js/storage.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            renderBookmarks();
        });

        function renderBookmarks() {
            const container = document.getElementById('bookmark-container');
            const emptyMsg = document.getElementById('empty-msg');
            const bookmarks = getBookmarks(); // dari storage.js

            if (bookmarks.length === 0) {
                emptyMsg.classList.remove('hidden');
                container.innerHTML = '';
            } else {
                emptyMsg.classList.add('hidden');
                let html = '';
                bookmarks.forEach(item => {
                    html += `
                        <div id="bookmark-${item.id}" class="group relative block glass rounded-xl overflow-hidden border border-white/5 hover:border-neon-pink transition duration-300 hover:shadow-neon-pink">
                            <a href="${item.link}">
                                <div class="relative pb-[140%]">
                                    <img src="${item.poster}" class="absolute top-0 left-0 w-full h-full object-cover group-hover:scale-110 transition duration-500" onerror="this.src='https://via.placeholder.com/150?text=No+Image'">
                                    <div class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black via-black/80 to-transparent p-3 pt-8">
                                        <h3 class="text-sm font-bold truncate text-white group-hover:text-neon-pink transition">${item.title}</h3>
                                    </div>
                                </div>
                            </a>
                            <button onclick="removeBookmark('${item.id}')" class="absolute top-2 right-2 bg-black/50 backdrop-blur hover:bg-neon-pink text-white w-8 h-8 rounded-full flex items-center justify-center shadow-lg transition transform hover:scale-110 z-10 border border-white/20 hover:border-neon-pink" title="Hapus">
                                ‚úï
                            </button>
                        </div>
                    `;
                });
                container.innerHTML = html;
            }
        }

        function removeBookmark(animeId) {
            // Kita tidak perlu konfirmasi di sini karena fungsi toggleBookmark tidak memilikinya.
            // Untuk konsistensi, kita bisa tambahkan konfirmasi di toggleBookmark jika perlu.
            
            // Buat dummy object hanya dengan ID untuk dioper ke toggleBookmark
            const animeData = { id: animeId, title: '', poster: '', link: '' }; 
            
            toggleBookmark(animeData); // Gunakan fungsi dari storage.js untuk menghapus
            
            // Hapus elemen dari DOM secara visual
            const elem = document.getElementById(`bookmark-${animeId}`);
            if (elem) {
                elem.style.transition = 'transform 0.3s ease, opacity 0.3s ease';
                elem.style.transform = 'scale(0.9)';
                elem.style.opacity = '0';
                setTimeout(() => {
                    elem.remove();
                    // Setelah menghapus, cek apakah container jadi kosong
                    if (getBookmarks().length === 0) {
                        document.getElementById('empty-msg').classList.remove('hidden');
                        document.querySelector('button[onclick="clearBookmarks()"]').style.display = 'none'; // Sembunyikan tombol hapus semua
                    }
                }, 300);
            }
        }
        
        // Sembunyikan tombol "Hapus Semua" jika tidak ada bookmark
        if (getBookmarks().length === 0) {
            const clearBtn = document.querySelector('button[onclick="clearBookmarks()"]');
            if(clearBtn) clearBtn.style.display = 'none';
        }
    </script>
</body>
</html>
