    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        // --- PALET WARNA CYBERPUNK ---
                        cyber: {
                            dark: '#0a0f1d',    // Background Paling Belakang (Deep Navy)
                            card: '#151c30',    // Warna Kartu/Box
                            cardhover: '#1c2541', // Warna Kartu saat disorot
                            border: '#2a3454',  // Garis tepi tipis
                        },
                        neon: {
                            purple: '#8b5cf6',  // UNGU NEON (Warna Utama)
                            pink: '#ec4899',    // PINK NEON (Aksen Sekunder)
                            cyan: '#06b6d4',    // CYAN NEON (Highlights)
                        }
                    },
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                    },
                    boxShadow: {
                        // Efek Cahaya Neon (Glow)
                        'neon-purple': '0 0 20px rgba(139, 92, 246, 0.5)',
                        'neon-pink': '0 0 20px rgba(236, 72, 153, 0.5)',
                        'neon-cyan': '0 0 20px rgba(6, 182, 212, 0.3)',
                    }
                }
            }
        }
    </script>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            /* Background dengan sedikit gradasi halus biar tidak flat */
            background: radial-gradient(circle at top center, #1a2238 0%, #0a0f1d 100%);
