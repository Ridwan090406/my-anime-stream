        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: #0a0f1d; }
        ::-webkit-scrollbar-thumb { background: #8b5cf6; border-radius: 10px; }
        
        /* Efek Kaca (Glass) */
        .glass {
            background: rgba(21, 28, 48, 0.7); /* Warna card transparan */
            backdrop-filter: blur(10px); /* Efek buram di belakangnya */
            border: 1px solid rgba(255, 255, 255, 0.1); /* Garis tipis mengkilap */
        }
    </style>
</head>

