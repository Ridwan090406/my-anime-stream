<style>
    /* Tambahkan padding bawah di body agar konten tidak tertutup menu HP */
    body { padding-bottom: 0px; } 
    /* Padding diatur oleh div spacer di footer.ejs */
    
    /* Loading Bar Warna Biru */
    #nprogress .bar { background: #3b82f6 !important; height: 3px !important; }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/nprogress/0.2.0/nprogress.min.js"></script>
<script>
    // Konfigurasi: hilangkan lingkaran spinner, cukup bar saja
    NProgress.configure({ showSpinner: false });

    // Fungsi mulai loading (dipanggil saat form submit)
    function startLoading() {
        NProgress.start();
    }

    // Deteksi saat user klik link apapun
    document.addEventListener('click', function(e) {
        // Cek apakah yang diklik adalah link <a>
        const link = e.target.closest('a');
        
        // Jika link internal (bukan target="_blank" atau javascript:), jalankan loading
        if (link && link.href && !link.href.startsWith('javascript') && link.target !== '_blank') {
            NProgress.start();
        }
    });

    // Matikan loading saat halaman selesai dimuat (jika user tekan back button)
    window.addEventListener('pageshow', function() {
        NProgress.done();
    });
</script>

<style>
    /* Ubah warna Loading Bar jadi Biru (sesuai tema) */
    #nprogress .bar { background: #3b82f6 !important; height: 3px !important; }
    #nprogress .peg { box-shadow: 0 0 10px #3b82f6, 0 0 5px #3b82f6 !important; }
</style>
