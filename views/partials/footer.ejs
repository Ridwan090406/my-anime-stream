<div id="search-modal" class="fixed inset-0 bg-cyber-dark/95 z-[60] hidden flex-col items-center justify-center p-4 backdrop-blur-md transition-opacity duration-300">
    
    <button onclick="toggleSearch()" class="absolute top-6 right-6 text-gray-400 hover:text-white transition transform hover:rotate-90">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
    
    <h3 class="text-2xl font-bold mb-8 text-transparent bg-clip-text bg-gradient-to-r from-neon-cyan to-neon-purple animate-pulse">
        Mau nonton apa?
    </h3>
    
    <form action="/search" method="GET" class="w-full max-w-md relative group">
        <div class="absolute inset-0 bg-gradient-to-r from-neon-cyan to-neon-purple rounded-full blur opacity-25 group-hover:opacity-50 transition duration-500"></div>
        
        <input type="text" name="q" id="mobile-search-input" placeholder="Ketik judul anime..." 
            class="relative w-full bg-cyber-card text-white border border-white/10 rounded-full px-6 py-4 text-lg focus:outline-none focus:border-neon-purple focus:shadow-[0_0_20px_rgba(139,92,246,0.3)] transition placeholder-gray-500">
            
        <button type="submit" class="absolute right-2 top-2 bg-neon-purple hover:bg-neon-purple/80 p-2.5 rounded-full text-white transition shadow-lg hover:shadow-neon-purple">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </button>
    </form>
    
    <div class="mt-10 flex flex-wrap justify-center gap-3 max-w-sm">
        <span class="text-gray-500 text-xs uppercase tracking-widest w-full text-center mb-2">Pencarian Populer</span>
        
        <% ['One Piece', 'Naruto', 'Boruto', 'Isekai', 'Action'].forEach(tag => { %>
            <a href="/search?q=<%= tag %>" class="glass px-4 py-1.5 rounded-full text-xs text-gray-300 border border-white/10 hover:border-neon-cyan hover:text-neon-cyan hover:shadow-neon-cyan transition duration-300">
                <%= tag %>
            </a>
        <% }) %>
    </div>
</div>

<script>
    // FUNGSI TOGGLE POPUP
    function toggleSearch() {
        const modal = document.getElementById('search-modal');
        const input = document.getElementById('mobile-search-input');
        
        if (modal.classList.contains('hidden')) {
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            // Animasi masuk
            setTimeout(() => {
                modal.classList.remove('opacity-0');
                input.focus();
            }, 50);
        } else {
            modal.classList.add('opacity-0');
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            }, 300);
        }
    }

    // ACTIVE STATE MENU (Auto Detect Halaman)
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('nav a.nav-item');
    
    navLinks.forEach(link => {
        const href = link.getAttribute('href');
        // Jika link sama dengan URL sekarang
        if (href && href !== 'javascript:void(0)' && currentPath === href) {
            link.classList.remove('text-gray-500');
            
            // Warna Khusus Per Menu
            if (href === '/bookmark') {
                link.classList.add('text-neon-pink');
                link.querySelector('svg').classList.add('drop-shadow-[0_0_8px_rgba(236,72,153,0.8)]');
            }
            else if (href === '/history') {
                link.classList.add('text-neon-purple');
                link.querySelector('svg').classList.add('drop-shadow-[0_0_8px_rgba(139,92,246,0.8)]');
            }
            else {
                link.classList.add('text-neon-cyan');
                link.querySelector('svg').classList.add('drop-shadow-[0_0_8px_rgba(6,182,212,0.8)]');
            }
        }
    });
</script>
